// tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext", // 或你希望的目标版本
    "module": "esnext",
    "sourceMap": true, // 生成对应的.map文件以支持源码映射调试
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "lib": ["es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  },
  "include": ["**/*.ts"], // 指定要编译的源文件目录
  "exclude": ["node_modules", "**/*.spec.ts"]
}
